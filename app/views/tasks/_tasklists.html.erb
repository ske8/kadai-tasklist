<% if tasklists.any? %>
  <ul class="list-unstyled mt-2">
    <% tasklists.each do |tasklist| %>
      <li class="d-flex">
        <img class="rounded me-2 mb-5" src="<%= gravatar_url(tasklist.user, { size: 64 }) %>" alt="">
        <div>
          <div>
            <%= link_to tasklist.user.name, user_path(tasklist.user), class: "text-decoration-none" %> <span class="text-muted">posted at <%= tasklist.created_at %></span>
          </div>
          <div>
            <p><%= tasklist.content %></p>
          </div>
          <div>
            <% if current_user == tasklist.user %>
              <%= button_to "Delete", tasklist, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
  <%== pagy_bootstrap_nav(@pagy) %>
<% end %>